<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Login Page - Product Admin</title>
</head>

<body>
  <script src="bundle.js"></script>
  <div class="container tm-mt-big tm-mb-big">
    <div class="row">
      <div class="col-12 mx-auto tm-login-col">
        <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
          <div class="row">
            <div class="col-12 text-center">
              <div id="select-files"></div>
              <h2 class="tm-block-title mb-4">Welcome to Dashboard, Login</h2>
            </div>
          </div>
          
          <div class="row mt-2">
            <div class="col-12">
              <form action="/login" method="post" class="tm-login-form">
                <div class="form-group">
                  <label for="username">Username</label>
                  <input name="username" type="text" class="form-control validate" id="username" value="" required />
                  <div id="username-feedback" class="invalid-feedback"></div>
                </div>
                <div class="form-group mt-3">
                  <label for="password">Password</label>
                  <input name="password" type="password" class="form-control validate" id="password" value=""
                    required />
                  <div class="invalid-feedback">
                    Password must be at least 6 charactor
                  </div>
                </div>
                <span id="failure-flash"> {{message}} </span>
                <span id="success-flash"> {{smessage}} </span>
                <div class="form-group mt-4">
                  <button id="button-submit" type="submit" class="btn btn-primary btn-block text-uppercase">
                    Login
                  </button>
                </div>
                <a href="/forgot-password" class="mt-5 btn btn-primary btn-block text-uppercase">
                    Forgot your password?
                </a>
                
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
 <script src="bundle.js"></script>
  <script src="js/jquery-3.3.1.min.js"></script>
  <!-- https://jquery.com/download/ -->
  <script src="js/accounts/login.js"></script>

</body>

</html>