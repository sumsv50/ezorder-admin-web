<div class="container-fluid">
    <form id='itemInfo' method="POST" action="/products/store"
                             enctype="multipart/form-data">
    <div class="row">
        <div class="col-xl-6 col-lg-6 col-md-12">
            <div id="carousel-place-holder" class="form-group">
            </div>
            <input name="img" id="fileInput" type="file" accept="image/*"
                hidden="hidden" multiple/>
            <div class="custom-file mt-3 mb-3">
                <input type="button" class="btn btn-primary btn-block mx-auto"
                    value="ADD PRODUCT IMAGE"
                    onclick=" document.getElementById('fileInput').click();" />
            </div>
            <input id="photos-remove" name="photos_remove" type="text" class="form-control validate"
                                        hidden/>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-12">
            <div class="form-group mb-3">
                <label for="name">Tên:</label>
                <input id="name" name="name" type="text" value="\{{product.name}}" class="form-control validate" required/>
                <label for="type">Loại:</label>
                <select name="type" class="custom-select" id="type" required>
                    <option value=2 \{{#ifEquals product.type '2'}}
                        selected \{{/ifEquals}} >Đồ ăn
                    </option>
                    <option value=1 \{{#ifEquals product.type '1'}}
                        selected \{{/ifEquals}}> Đồ uống
                    </option>
                    
                </select>
                <label for="price">Giá:</label>
                <input id="price" name="price" type="number" value="\{{product.price}}" class="form-control validate" required/>
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-secondary \{{#if product.available}}active\{{/if}}">
                    <input type="radio" name="available" id="option1" value=true autocomplete="off" \{{#if product.available}}checked\{{/if}}> Còn món
                    </label>
                    <label class="btn btn-secondary \{{#unless product.available}}active\{{/unless}}">
                    <input type="radio" name="available" id="option2" autocomplete="off" value=false \{{#unless product.available}}checked\{{/unless}}> Hết món
                    </label>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group mb-3">
                <label for="description">Mô tả:</label>
                <textarea class="form-control validate" name="description"
                    rows="6" required>\{{product.description}}</textarea>
            </div>
        </div>

    </div>
    </form>
</div>